#!/usr/bin/env bash

source "$HOME/.config/sketchybar/variables.sh"

############## BAR SETUP ##############
sketchybar --bar height=36 \
	color="$BAR_COLOR" \
	position=top \
	sticky=on \
	padding_right=0 \
	padding_left=0 \
	corner_radius=0 \
	y_offset=0 \
	margin=0 \
	blur_radius=0 \
	--default updates=when_shown \
	icon.font="$FONT:Regular:15.0" \
	icon.color="$ICON_COLOR" \
	icon.padding_left="$PADDINGS" \
	icon.padding_right="$PADDINGS" \
	label.font="$FONT:Regular:14.0" \
	label.color="$LABEL_COLOR" \
	label.padding_left="$PADDINGS" \
	label.padding_right="$PADDINGS" \
	background.padding_right="$PADDINGS" \
	background.padding_left="$PADDINGS"

############## LEFT ITEMS ##############
source "$ITEM_DIR/spaces.sh"

############## RIGHT ITEMS ##############
# Order: first added = rightmost. Date at the edge, then clock, battery, volume, then separator.
# source "$ITEM_DIR/music.sh"
source "$ITEM_DIR/date.sh"
source "$ITEM_DIR/clock.sh"
source "$ITEM_DIR/battery.sh"
source "$ITEM_DIR/volume.sh"
# source "$ITEM_DIR/music.sh"

# Separator at left of right section
# sketchybar --add item separator right \
# 	--set separator icon="â”‚" \
# 	icon.font="$FONT:Regular:14.0" \
# 	icon.color=0xff3a3a3a \
# 	icon.padding_left=8 \
# 	icon.padding_right=8 \
# 	background.drawing=off

#################### FINALIZE ####################
sketchybar --update

echo "sketchybar configuration loaded..."
